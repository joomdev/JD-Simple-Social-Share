<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1" client="site" method="upgrade">
	<name>JD Simple Social Share</name>
	<creationDate>October 2013</creationDate>
	<version>1.0.0</version>
	<author>JoomDev (Formerly GraphicAholic)</author>
	<copyright>Copyright (C) 2020 Joomdev, Inc. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later</license>
	<authorEmail>info@joomdev.com</authorEmail>
	<authorUrl>https://www.joomdev.com</authorUrl>
	<description>
	<![CDATA[
		<div class="alert alert-info" style="font-weight: normal;">
			<img src="../modules/mod_dsss/images/extension_01.jpg" alt="Dear Simple Social Share"/>
			<h3>JD Simple Social Share</h3>
			<p>JD Simple Social Share module allows you to add social share buttons on your Joomla articles. It offers your three different styles and doesnâ€™t track back the users.</p>
			<p>JD Simple Social Share  formerly known as Dead Simple Social Share Buttons from Graphicaholic is now moved to JoomDev along with other Extensions. <strong>Check out the <a href="https://www.joomdev.com/graphicaholic" target="_blank">Announcement here.</a></strong></p>
			<a href="https://www.joomdev.com/forum/jd-simple-social-share" target="_blank">Support</a> | <span>Demo</span> | <a href="https://www.joomdev.com/products/extensions/jd-simple-social-share" target="_blank">More Details</a>
		</div>
	]]>
	</description>

	<updateservers>
		<server type="extension" priority="1" name="JD Simple Social Share">https://joomdev.com/updates/dsssb.xml</server>
	</updateservers>

	<files>
		<filename module="mod_dsss">mod_dsss.php</filename>
		<folder>css</folder>
		<folder>tmpl</folder>
		<folder>images</folder>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename>mod_dsss.xml</filename>
	</files>
	<config>
		<fields name="params">
			<!-- General Settings -->
			<fieldset name="general" group="general" label="Module Options">
				<field name="styleSize" type="list" default="1" label="Choose Icon Style" description="">
					<option value="1">Small - Square Icons</option>
					<option value="2">Medium - Rectangle Icons</option>
					<option value="3">Large - Rectangle Icons</option>
				</field>
				<field name="iconSize" type="text" default="24px" label="Icon Size" description="Supports px, em or % size values. Make sure to enclude one of these symbols after your size." />
				<field name="urlValue" type="text" default="" label="URL Path" description="URL path to share." />
				<field name="textValue" type="text" default="" label="Text" description="Text about your social post." />
				<field name="showFacebook" type="radio" class="btn-group" default="1" label="Show Facebook" description="">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="showTwitter" type="radio" class="btn-group" default="1" label="Show Twitter" description="">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="showGoogle" type="radio" class="btn-group" default="1" label="Show Google+" description="">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="showTumblr" type="radio" class="btn-group" default="1" label="Show Tumblr" description="">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="showTumblr" type="radio" class="btn-group" default="1" label="Show Tumblr" description="">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="showEmail" type="radio" class="btn-group" default="1" label="Show Email" description="">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="showPinterest" type="radio" class="btn-group" default="1" label="Show Pinterest" description="">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="showLinkedin" type="radio" class="btn-group" default="1" label="Show Linkedin" description="">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="showReddit" type="radio" class="btn-group" default="1" label="Show Reddit" description="">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="showXING" type="radio" class="btn-group" default="1" label="Show XING" description="">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="showWhatsapp" type="radio" class="btn-group" default="1" label="Show Whatsapp" description="">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
			</fieldset>
			<!-- Advanced Settings -->
			<fieldset name="advanced" group="advanced">
				<field name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="fieldMODULECLASSSUFFIX" />
				<field name="cache" type="radio" class="btn-group" default="1" label="Caching" description="Select whether to cache the content of this module">
					<option value="1">Use global</option>
					<option value="0">No caching</option>
				</field>
				<field name="cache_time" type="text" default="900" label="Cache Time" description="The time before the module is recached" />
				<field name="documentation" type="docs" default="900" label="" description="" />
			</fieldset>
		</fields>
	</config>
</extension>